#!/bin/bash

set -e
source settings
here=$(pwd)
name="$1"

if [ -z "$name" ]
then
  name="./res/res"
fi
echo "running simulation using name: $name."

rm -f "$name"*.obj
rm -f "$name"*.x


python main.py \
  --out "$name" \
  --procs 6 \
  --nearl 0.003 \
  --farl 0.05 \
  --stp 1.0e-7 \
  --attract 0.3 \
  --reject 1.0 \
  --unfold 0.1 \
  --stat 10 \
  --obj ./data/base.obj


#usage: main.py [-h] [--obj OBJ] [--procs PROCS] [--profile PROFILE]
               #[--nearl NEARL] [--farl FARL] [--stp STP] [--reject REJECT]
               #[--attract ATTRACT] [--unfold UNFOLD] [--nmax NMAX] [--itt ITT]
               #[--stat STAT] [--export EXPORT] [--out OUT] [--scale SCALE]

#optional arguments:
  #-h, --help         show this help message and exit
  #--obj OBJ
  #--procs PROCS      number of processors.
  #--profile PROFILE  run in profiler mode?
  #--nearl NEARL
  #--farl FARL
  #--stp STP
  #--reject REJECT
  #--attract ATTRACT
  #--unfold UNFOLD
  #--nmax NMAX
  #--itt ITT
  #--stat STAT
  #--export EXPORT
  #--out OUT
  #--scale SCALE

