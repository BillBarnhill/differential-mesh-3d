#!/bin/bash

set -e
source settings
here=$(pwd)
name="$1"

if [ -z "$name" ]
then
  name="./res/res"
fi
echo "running simulation using name: $name."

rm -f "$name"*.obj
rm -f "$name"*.x


python main.py \
  --out "$name" \
  --procs 6 \
  --vnum 100000000 \
  --nearl 0.0028 \
  --farl 0.04 \
  --stp 1.0e-7 \
  --attract 0.2 \
  --reject 1.0 \
  --unfold 0.1 \
  --triangle 0.1 \
  --stat 100 \
  --obj ./data/base.obj \

